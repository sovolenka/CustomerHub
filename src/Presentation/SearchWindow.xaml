<Window x:Class="Presentation.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title ="Пошук" Height="130" Width="615" ResizeMode="NoResize" Background="#FFF4EEEE" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Введіть символи за якими хочете знаходити чи фільтрувати" Margin="28,10,0,87" Foreground="#FF625858" FontWeight="Bold" />
        <TextBox x:Name="SearchTextBox" FontSize="14" HorizontalAlignment="Left" Margin="28,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Height="36"/>
        <Button x:Name="SearchButton" Content="Пошук" Margin="498,27,28,0" VerticalAlignment="Top" RenderTransformOrigin="0.089,0.162" Height="36" Click="SearchButtonClick" FontWeight="Bold"/>
    </Grid>
</Window>
